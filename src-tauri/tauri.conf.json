{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../build",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "DLsite Manager",
    "version": "1.5.0"
  },
  "tauri": {
    "allowlist": {
      "shell": {
        "open": ""
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "category": "Utility",
      "identifier": "dev.ashrimp.dlsite-manager",
      "icon": ["icons/icon.ico"]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": []
  }
}
